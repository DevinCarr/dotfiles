set nocompatible

set t_Co=256
colorscheme solarized
set background=dark

syntax on
filetype plugin indent on

set nobackup
set noswapfile

set number
set nowrap
set backspace=indent,eol,start
set incsearch
set showmode
set wildmenu
set ruler
set lz
set hid

" Default tab settings
set tabstop=4
set softtabstop=4
set shiftwidth=4
set encoding=utf-8
set expandtab
set autoindent
set smartindent
set cindent
set ai
set si
set cin

set mouse=a
set numberwidth=6
set showmatch
